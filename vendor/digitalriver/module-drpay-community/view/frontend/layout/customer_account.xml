<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                name="digital-river-tax-cert">
                <arguments>
                    <argument name="path" xsi:type="string">drpay/customer/index</argument>
                    <argument name="label" xsi:type="string">U.S. Tax Certificates</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="digital-river-payment-methods">
                <arguments>
                    <argument name="path" xsi:type="string">drpay/storedmethods/index</argument>
                    <argument name="label" xsi:type="string">Stored Payment Methods</argument>
                    <argument name="sortOrder" xsi:type="number">160</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>