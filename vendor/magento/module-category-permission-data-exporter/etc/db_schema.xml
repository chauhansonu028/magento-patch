<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="catalog_data_exporter_category_permissions" resource="default" engine="innodb" comment="Category Permissions Feed Storage">
        <column xsi:type="int"
            name="permission_id"
            unsigned="true"
            nullable="true"
            comment="Permission Id"
        />
        <column xsi:type="varchar"
            name="category_id"
            nullable="false"
            length="45"
            comment="Category Id"
        />
        <column xsi:type="varchar"
            name="website_id"
            length="45"
            nullable="false"
            comment="Website id"
        />
        <column xsi:type="varchar"
            name="customer_group_id"
            length="45"
            nullable="false"
            comment="Customer Group id"
        />
        <column
            xsi:type="mediumtext"
            name="feed_data"
            nullable="false"
            comment="Feed Data"
        />
        <column
            xsi:type="timestamp"
            name="modified_at"
            on_update="true"
            nullable="false"
            default="CURRENT_TIMESTAMP"
            comment="Created At"
        />
        <column
            xsi:type="tinyint"
            name="is_deleted"
            nullable="false"
            default="0"
            comment="Deleted flag"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_id"/>
            <column name="website_id"/>
            <column name="customer_group_id"/>
        </constraint>
        <index referenceId="catalog_data_exporter_category_permissions_permission_id" indexType="btree">
            <column name="permission_id"/>
            <column name="is_deleted"/>
        </index>
        <index referenceId="catalog_data_exporter_category_permissions_modified_at" indexType="btree">
            <column name="modified_at"/>
        </index>
    </table>
</schema>
